<div class="card my-4 commentForm">
    <h5 class="card-header">Laisser un commentaire:</h5>
    <div class="card-body">
        <form action="{{ asset('comments/' ~ post.post_id ~ '/add') }}" method="post">
            <div class="form-group">
                <label for="author">Votre identifiant: </label>
                <input class="form-control" name="author" value="{% if currentUser is defined %}{{ currentUser.username }}{% endif %}" required>
                <label for="content">Votre commentaire: </label>
                <textarea class="form-control" rows="3" name="content" required></textarea>
            </div>
            <button type="submit" name="submit" class="btn btn-primary">Valider</button>
        </form>
    </div>
</div>
