{% extends('base.twig') %}

{% block title %} Admin - Modifier un article {% endblock title %}

{% block body %}
    {% if post is defined %}
        <div class="card my-4 commentForm">
            <h5 class="card-header">Modifier l'article</h5>
            <div class="card-body">
                <form action="{{ asset('admin/posts/' ~ post.post_id ~ '/edit') }}" method="post">
                    <div class="form-group">
                        <label for="title">Titre: </label>
                        <input class="form-control" name="title" value="{{ post.title }}" required>
                        <label for="subtitle">Chapô: </label>
                        <input class="form-control" name="subtitle" value="{{ post.subtitle }}" required>
                        <label for="content">Article: </label>
                        <textarea class="form-control" rows="3" name="content" required>{{ post.content }}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </form>
            </div>
        </div>
    {% else %}
        <div class="card my-4 commentForm">
        <h5 class="card-header">Ajouter un article</h5>
        <div class="card-body">
            <form action="{{ asset('admin/posts/create') }}" method="post">
                <div class="form-group">
                    <label for="title">Titre: </label>
                    <input class="form-control" name="title" required>
                    <label for="subtitle">Chapô: </label>
                    <input class="form-control" name="subtitle" required>
                    <label for="content">Article: </label>
                    <textarea class="form-control" rows="3" name="content" required></textarea>
                    <label for="author">Votre identifiant: </label>
                    <input class="form-control" name="author" value="{% if currentUser is defined %}{{ currentUser.username }}{% endif %}">
                </div>
                <button type="submit" class="btn btn-primary" name="submit">Enregistrer</button>
            </form>
        </div>
        </div>
    {% endif %}
{% endblock %}
