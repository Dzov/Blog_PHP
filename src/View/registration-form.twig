{% extends('base.twig') %}

{% block title %} Blog - Inscription {% endblock title %}

{% block body %}
    {% if errors is defined %}
        {% for error in errors %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        {% endfor %}
    {% endif %}
    <div class="card my-4 commentForm loginForm">
        <h5 class="card-header">S'inscrire</h5>
        <div class="card-body">
            <form action="{{ asset('register') }}" method="post">
                <div class="form-group">
                    <label for="username">Identifiant</label>
                    {% if vm.errors.username is defined %}
                        <div class="alert alert-danger" role="alert">{{ vm.errors.username }}</div>
                    {% endif %}
                    <input class="form-control" name="username" required value="{% if vm.username is defined %}{{ vm.username }}{% endif %}">
                    <label for="password">Mot de passe</label>
                    {% if vm.errors.password is defined %}
                        <div class="alert alert-danger" role="alert">{{ vm.errors.password }}</div>
                    {% endif %}
                    <input class="form-control" type="password" name="password" required>
                    <label for="first_name">Pr√©nom</label>
                    {% if vm.errors.firstName is defined %}
                        <div class="alert alert-danger" role="alert">{{ vm.errors.firstName }}</div>
                    {% endif %}
                    <input class="form-control" name="first_name" required value="{% if vm.firstName is defined %}{{ vm.firstName }}{% endif %}">
                    <label for="last_name">Nom</label>
                    {% if vm.errors.lastName is defined %}
                        <div class="alert alert-danger" role="alert">{{ vm.errors.lastName }}</div>
                    {% endif %}
                    <input class="form-control" name="last_name" required value="{% if vm.lastName is defined %}{{ vm.lastName }}{% endif %}">
                    <label for="email">Email</label>
                    {% if vm.errors.email is defined %}
                        <div class="alert alert-danger" role="alert">{{ vm.errors.email }}</div>
                    {% endif %}
                    <input class="form-control" type="email" name="email" required value="{% if vm.email is defined %}{{ vm.email }}{% endif %}">
                    <input type="hidden" name="token" id="token" value="{{ token }}"/>
                </div>
                <button type="submit" name='submit' class="btn btn-primary">S'inscrire</button>
            </form>
        </div>
    </div>


{% endblock %}

{% block footer %} {% endblock %}
